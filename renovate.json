{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/clusters/.*/.*\\.yaml$/"
    ]
  },
  "flux": {
    "managerFilePatterns": [
      "/clusters/.*/.*\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "description": "Lock MySQL to v8",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["mysql"],
      "allowedVersions": "^8"
    },
    {
      "description": "Lock meilisearch to v1.12.8",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["getmeili/meilisearch"],
      "allowedVersions": "^1.12.8"
    }
  ]
}
