{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/clusters/.*/.*\\.yaml$/"
    ],
    "packageRules": [
      {
        "matchPackageNames": ["mysql"],
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"]
      }
    ]
  },
  "flux": {
    "managerFilePatterns": [
      "/clusters/.*/.*\\.yaml$/"
    ]
  }
}
