{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/clusters/.*/.*\\.yaml$/"
    ]
  },
  "flux": {
    "managerFilePatterns": [
      "/clusters/.*/.*\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": ["mysql"],
      "matchUpdateTypes": ["minor", "patch"]
    }
  ]
}
