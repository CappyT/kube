{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "flux": {
    "fileMatch": [
      "^clusters/.*/.*\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": ["helm"],
      "matchPackageNames": ["kube-prometheus-stack"],
      "registryUrls": ["https://prometheus-community.github.io/helm-charts"]
    }
  ]
}